.howtowork
  background url('../images/howtowork-bg.png') center center/cover no-repeat
  background-size cover
  padding-top 11rem
  padding-bottom 13rem
  &__title
    text-align: center
    font-family Raleway
    font-weight: 800
    font-size: 4.6rem
    margin-bottom 4.6rem
  &__content
    display flex
    justify-content: space-between
    align-items: flex-start
    margin-bottom 12rem
  &__etaps
    display flex
    flex-direction: column
    align-items: flex-start
    justify-content: flex-start
    flex-basis 30%
  &__number
    font-family: Open Sans
    font-weight: 800
    font-size: 6rem
    color #60C3FE
    margin-bottom 1rem
  &__subtitle
    font-family: Open Sans
    font-weight: 700
    font-size: 2.4rem
    color black
    margin-bottom 2.4rem
  &__text
    font-family: Open Sans
    font-weight: normal
    font-size: 1.6rem
    line-height 3rem
    color black
  &__footer
    padding 5.2rem 12rem 6rem 12rem
    border 0.4rem solid #60C3FE
    position relative
    &:before
      content ''
      position absolute
      height: calc(100% + 4.4rem);
      width: calc(100% - 4.4rem);
      top 0
      left 0
      z-index -1
      transform: translate(2rem, -2.6rem)
      border 0.4rem solid #D1E3EF
  &__tag
    text-align center
    font-size 3rem
    font-family: Open Sans
    font-weight: 700
    color black
    margin-bottom 4rem
    & span
      color #60C3FE
  &__variants
    display flex
    justify-content: space-between
    align-items: flex-start
  &__image
    display: block
    margin 0 auto
  &__garant
    text-align: center
    font-size 2rem
    font-family: Open Sans
    color black
    font-weight: 600
    & span
      color #60C3FE
      font-weight: 700
      font-size 3rem

.howtowork__etaps button
  margin-top 4rem
