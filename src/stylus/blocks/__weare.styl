.weare
  padding-top 6.6rem
  margin-bottom 13rem
  &__block
    display flex
    justify-content: space-between
    align-items: center
    margin-bottom 6rem
  &__image
    margin-right 9rem
    position: relative
    &:before
      content ''
      position: absolute
      width: 100%
      height: 100%
      top -5rem
      left -8rem
      z-index -1
      background: url('../images/decor.png') no-repeat
    &_second
      margin-left 9rem
      position: relative
      &:before
        content ''
        position: absolute
        width: 100%
        height: 100%
        bottom -5rem
        right -8rem
        z-index -1
        background: url('../images/decor.png') no-repeat
  &__text
    font-size: 1.6rem
    font-family: Open Sans
    color black
    font-weight: normal
    line-height 3rem
    margin-bottom 1.8rem
    & span
      font-weight: 700
