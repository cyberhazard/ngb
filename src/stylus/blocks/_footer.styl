.footer
  background: url('../images/footer-bg.png') center center/cover no-repeat
  background-size: cover
  padding 10rem 0 3rem 0
  &__title
    text-align: center
    font-family: Raleway
    font-weight 800
    font-size 4.6rem
    color white
    margin-bottom 7rem
  &__subtitle
    font-size: 1.8rem
    font-family: Open Sans
    font-weight normal
    color white
    margin-bottom 1.2rem
  &__text
    font-size: 3rem
    font-family: Open Sans
    font-weight 700
    color white
  &__elem
    margin-bottom 2.4rem
  &__content
    display flex
    justify-content space-between
    align-items: flex-start
    margin-bottom 21rem
  &__grid
    &:nth-child(1)
      padding-top 5rem
  &__form
    text-align: center
  &__item
    margin-bottom 3.2rem
    &:nth-child(3)
      margin-bottom 6rem
  &__input
    width 40rem
    background-color RGBA(23,33,39,1)
    border 0.1rem solid RGBA(58,74,83,1)
    color #6C6C6C
    padding 1.5rem 3.4rem 1.5rem 3.4rem
    border-radius 14rem
    font-family: Open Sans
    transition 0.3s
    font-size 1.6rem
    &:hover
      border-color: #60C3FE
    &:focus
      border-color: #60C3FE
    &__submit
      display: inline-block
  &__textarea
    width 40rem
    height: 11.2rem
    font-size 1.6rem
    border 0.1rem solid RGBA(58,74,83,1)
    color #6C6C6C
    background-color RGBA(23,33,39,1)
    padding 1.5rem 3.4rem 1.5rem 3.4rem
    border-radius 4rem
    transition 0.3s
    resize: none;
    transition 0.3s
    &:hover
      border-color: #60C3FE
    &:focus
      border-color: #60C3FE
  &__field
    display: block
    font-size 1.6rem
    color #D8D8D8
    font-family: Open Sans
    margin-bottom 2rem
    text-align: left
  &__conf
    display flex
    justify-content: space-between
    align-items: center
  &__pol
    font-size: 1.6rem
    font-family: Open Sans
    color #909090
    &_bold
      font-weight: 600
      color white
      text-align: right
      margin-bottom 1.6rem

@media (max-width: 1024px)
  .footer
    padding 8.8rem 0 3rem 0
    &__title
      font-size 3rem
      margin-bottom 3.2rem
    &__subtitle
      font-size 1.4rem
      margin-bottom 0.4rem
    &__text
      font-size: 2rem
    &__field
      font-size 1.4rem
      margin-bottom 1.4rem
    &__input
      font-size 1.4rem
      padding 1.1rem 2.9rem 1.1rem 2.9rem
      width 34rem
    &__item
      margin-bottom 2.4rem
      &:nth-child(3)
        margin-bottom 4rem
    &__textarea
      font-size 1.4rem
      padding 1.1rem 2.9rem 1.1rem 2.9rem
      width 34rem
      height 10.8rem
    &__content
      margin-bottom 14.6rem
    &__pol
      font-size 1.2rem
    &__elem
      margin-bottom 2rem

@media (max-width: 566px)
  .footer
    padding 3.8rem 0 3rem 0
    &__title
      font-size 2.4rem
      margin-bottom 3rem
    &__subtitle
      font-size 1.2rem
    &__text
      font-size 1.8rem
      line-height 2.6rem
    &__content
      display: block
      margin-bottom 9rem
    &__grid
      &:nth-child(1)
        padding-top 0rem
    &__elem
      margin-bottom 1.4rem
    &__item
      margin-bottom 2.4rem
      &:nth-child(3)
        margin-bottom 4rem
    &__grid
      margin-bottom 5.2rem
    &__field
      font-size 1.2rem
      padding-left 5.4rem
    &__input
      font-size 1.2rem
      width 28.9rem
    &__textarea
      font-size 1.2rem
      width 28.9rem
      height 9.8rem
    &__conf
      flex-direction: column
    &__pol
      text-align: center
      margin-bottom 2rem
      &_bold
        margin-bottom 1rem

@media (max-width: 418px)
  .footer__field
    padding-left 5rem

@media (max-width: 378px)
  .footer__field
    padding-left 2rem

@media (max-width: 378px)
  .footer__field
    padding-left 1rem


