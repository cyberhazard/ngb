.documents
  padding-top 8rem
  padding-bottom 4rem
  &__header
    font-size: 4.6rem
    color black
    font-family: Raleway
    text-align: right
    font-weight: 800
    margin-bottom 5.8rem
  &__subtitle
    font-size 3rem
    font-family: Open Sans
    font-weight: 700
    color black
    margin-bottom 4.4rem
  &__main
    display flex
    align-items: flex-start
    justify-content: space-between
  &__main
    display flex
    justify-content: space-between
  &__item
    font-size: 1.8rem
    font-family: Open Sans
    font-weight: 600
    padding-left 4.6rem
    position: relative
    margin-bottom 3.8rem
    &:last-child
      margin-bottom 1rem
    &:before
      content ''
      width 30px
      height: 30px
      background url('../images/shape.png') no-repeat
      background-size: cover
      position: absolute
      left 0
      top 0
  &__list
    display flex
    flex-direction: column
    flex-basis 60%
    padding-bottom 11rem
  &__image
    display flex
    flex-basis: 40%
    align-self: flex-end
  &__img
    max-width: 502px
    max-height: 494px
    width 100%
    transform: translateX(13rem);
